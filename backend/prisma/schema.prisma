datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  name      String?
  email     String     @unique
  password  String
  pseud0 UserMail[] @relation("possessedBy")
  pseud1 UserMail[] @relation("toUser")
  pseud2 UserMail[] @relation("fromUser")
}

model Email {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  subject   String?
  message   String?
  pseud UserMail[]

}

model UserMail {
  id         Int    @id @default(autoincrement())
  createdAt DateTime   @default(now())
  email      Email? @relation(fields: [emailId], references: [id])
  emailId    Int
  possessedBy User? @relation(name: "possessedBy", fields: [possessedById], references: [id])
  possessedById Int
  fromUser   User?  @relation(name: "fromUser", fields: [fromUserId], references: [id])
  fromUserId Int
  toUser     User?  @relation(name: "toUser", fields: [toUserId], references: [id])
  toUserId   Int
  typeOfBox  String
  // isRead Boolean

  @@unique([id, possessedById])
}
