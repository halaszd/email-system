datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  // emails    Email[]
  // mailBoxes UserMail[]
  toUser UserMail[] @relation("toUser")
  fromUser UserMail[] @relation("fromUser")
  all UserMail[] @relation("possessedBy") 
  

}

model Email {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  // fromUser  User?      @relation(fields: [fromId], references: [id])
  // fromId    Int
  subject   String?
  message   String?
  mailBoxes UserMail[]

}

model UserMail {
  id         Int    @id @default(autoincrement())
  email      Email? @relation(fields: [emailId], references: [id])
  emailId    Int
  // user      User?  @relation(fields: [userId], references: [id])
  // userId    Int
  possessedBy User? @relation(name: "possessedBy", fields: [possessedById], references: [id])
  possessedById Int
  fromUser   User?  @relation(name: "fromUser", fields: [fromUserId], references: [id])
  fromUserId Int
  toUser     User?  @relation(name: "toUser", fields: [toUserId], references: [id])
  toUserId   Int
  typeOfBox  String
  // isRead Boolean

  @@unique([emailId, possessedById, fromUserId, toUserId, typeOfBox])
}

